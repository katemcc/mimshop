.wrapper {
    max-width: 1550px;
    margin: 0 auto;
    padding: 0 ;
}
.feature-row__text--right {
    padding-right: 55px;
    line-height: 1.6em;
    margin-top: 8em;
    font-size: 1.2em;

}
.feature-row__text--left {
    padding-left: 55px;
    line-height: 1.6em;
    margin-top: 8em;
    font-size: 1.2em;


}
#products .main-content {
  color: #12130f;
  font-family: "PT+Mono", monospace;
  padding-top: 70px;
}
.grid-product__title {
    font-style: normal;
    font-size: 1em;
}
sup {
    color: #b8cf32;
    font-weight: 700;
    font-size: 80%;
    font-family: "Monserrat", Helvetica, sans-serif;
    margin-left: -.8em;
}
.site-header {
    padding: 20px 0 15px;
}
.site-nav__link {
    font-family: "PT Mono", monospace;
    font-weight: 400;
    font-style: bold;
    letter-spacing: 0.17em;
    text-transform: none;
    -webkit-transition: color 0.2s;
    -moz-transition: color 0.2s;
    -ms-transition: color 0.2s;
    -o-transition: color 0.2s;
    transition: color 0.2s;
    font-size: 1em;
}
.site-header h2 {
    display: none;
}
.feature-row__text--right {
    padding: 0 55px;
}
.feature-row__text--left {
    padding: 0 55px;
}
.slick-slide .slideshow__logo  img {
    margin: 0 auto;
    display:inline;
}
footer {
    background-color: #222323;
    color: #E4E0DF;
    padding: 24px;
}
.site-footer a {
   color: #E4E0DF;
}
#shopify-section-featured-collections {
   margin: 120px 25px;
   background-color: #E4E0DF;
}
.hr--large {
    display: none;
}
.collection-collage__item {
    overflow: visible;
}
.collection-grid__item-title--wrapper {
    display: block;
    position: static;
    margin-top: 15px;
}
.collection-grid__item-title {
    color: #12130f;
    font-family: "PT Mono", mono;
    font-size: 1.4em;
    font-style: normal;

}
.collection-grid__item-link {
    height: 120%;
}
.collection-collage__item-wrapper {
    overflow: visible;
}
.collection-menu-link {
    font-family: "PT Mono", monospace;
    font-weight: 400;
    font-style: bold;
    text-transform: none;
    display: inline-block;
    text-decoration: none;
    padding: 15px;
    white-space: nowrap;
    color: #222323;
}
.grid-uniform  {
    margin: 0 15%;
}
grid-product__image-wrapper {
    margin: 5% 0;
}
.product-detail {
    display: inline;
}
.btn {
    background-color: #12130F;
    color: #E4E0DF;
}
.btn .btn-full-width {
    width: 100%;
}
site-header__logo img {
    margin: 0 auto;
}
.burger-icon {
    display: block;
    height: 4px;
    width: 28px;
    left: 25px;
    margin-left: -9px;
    position: absolute;
    transition: all 0.25s ease-out;
    background: #E4E0DF;
}
.burger-icon--bottom {
    top: 41px;
}
.burger-icon--mid {
    top: 34px;
}
.burger-icon--top {
    top: 27px;
}


